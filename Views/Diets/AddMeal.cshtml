@model IEnumerable<WebApplication12.ViewModels.MealCreateVm>

@{
    ViewBag.Title = "AddMeal";
}

<h2>AddMeal</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeMeals)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => item.MealId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => item.MealId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => item.MealId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeMeals)
                </td>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(modelItem => item.DietId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("DietId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(modelItem => item.DietId, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </td>
                <td>
                    @Html.ActionLink("AddMeal", "AddMeal", new { id = item.MealId })
                </td>
            </tr>
        }

    </table>
    
}

